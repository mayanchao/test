		});
		
		//保存要排序的字段 
		$("[name='build_compound_sql_where_order']").each(function(index, domEle){
			
			var orderType = $(domEle).val();	
			var myJson = $.parseJSON(orderType);//用户值Json
			myJson.compoundSqlId = mySqlId;		
			var jsonStr = $.toJSON( myObj );			
