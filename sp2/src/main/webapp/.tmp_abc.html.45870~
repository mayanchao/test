			var showColumn = $(domEle).val();	
			var myJson = $.parseJSON(showColumn);//用户值Json
			myJson.compoundSqlId = mySqlId;
			delete myJson.id;			
			var jsonStr = $.toJSON( myJson );	
			alert(123);		
			$.ajax({
			type:"post",
